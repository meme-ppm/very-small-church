doctype html
html(lang="fr")

  head
    title #{__("page.admin.parish")} #{parish.name}
    include includes/head_md.jade

  body
    
    div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header.mdl-layout--fixed-drawer
        header.mdl-layout__header
            div.mdl-layout__header-row
                block header
                
        div.mdl-layout__drawer
            header=parish.name
            nav.mdl-navigation
                a(href="/admin/parish/"+parish.id+"/place", class=currentMenu==='place'?'mdl-navigation__link--current':'').mdl-navigation__link.show-dialog
                    span(data-badge=parish.places.length).mdl-badge=__('menu.places')
                a(href="/admin/parish/"+parish.id+"/event",class=currentMenu==='event'?'mdl-navigation__link--current':'').mdl-navigation__link.show-dialog
                    span(data-badge=parish.events.length).mdl-badge=__('menu.events')
                a(href="#").mdl-navigation__link.show-dialog=__('menu.celebrationTimes')
                a(href="#").mdl-navigation__link.show-dialog=__('menu.reconciliationTimes')
                    
        main.main.mdl-layout__content
            block content